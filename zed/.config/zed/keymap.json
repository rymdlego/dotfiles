[
  {
    "bindings": {
      "cmd-g": "git_panel::ToggleFocus",
      "cmd-f": "project_panel::ToggleFocus",
      "cmd-y": "outline_panel::ToggleFocus",
      "cmd-k": "agent::ToggleFocus"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "ctrl-shift-l": "workspace::ActivatePaneRight"
    }
  },
  {
    "context": "GitPanel",
    "use_key_equivalents": true,
    "bindings": {
      "ctrl-g ctrl-g": "git::Fetch",
      "ctrl-g P": "git::Push",
      "ctrl-g p": "git::Pull",
      "ctrl-g shift-up": "git::ForcePush",
      "ctrl-g d": "git::Diff",
      // "space c": "git::Commit",
      "space s a": "git::StageAll",
      "space u a": "git::UnstageAll",
      "cmd-ctrl-shift-y": "git::UnstageAll",
      "ctrl-shift-l": "workspace::ActivatePaneRight"
    }
  },
  {
    "context": "GitCommit > Editor",
    "bindings": {
      "cmd-enter": "git::Commit",
      "cmd-shift-enter": "git::Amend",
      "cmd-m": "git::GenerateCommitMessage"
    }
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual) && !VimWaiting && !menu",
    "bindings": {
      // Key-bindings for normal & visual mode
      //
      // Block selection
      "ctrl-m": "editor::SelectLargerSyntaxNode",
      "ctrl-shift-m": "editor::SelectSmallerSyntaxNode",
      // Open markdown preview
      "space m p": "markdown::OpenPreview",
      "space m P": "markdown::OpenPreviewToTheSide"
    }
  },
  {
    "context": "Editor && vim_mode == normal && !VimWaiting && !menu",
    "bindings": {
      // Key-bindings to work only in normal mode
      "space e": "editor::Hover",

      // Buffers
      "s v": "pane::SplitRight",
      "s s": "pane::SplitDown",
      "ctrl-shift-l": "workspace::ActivatePaneRight",
      "ctrl-shift-h": "workspace::ActivatePaneLeft",
      "ctrl-shift-k": "workspace::ActivatePaneUp",
      "ctrl-shift-j": "workspace::ActivatePaneDown",
      "space h": "pane::ActivatePreviousItem",
      "space l": "pane::ActivateNextItem",
      "space c": "pane::CloseActiveItem",
      "space p s": "pane::DeploySearch",
      "space f": "editor::Format",
      "space t": "tab_switcher::Toggle",
      "ctrl-w l": "workspace::ToggleRightDock",
      "ctrl-w h": "workspace::ToggleLeftDock",
      "ctrl-w j": "workspace::ToggleBottomDock",

      // Error navigation
      "] e": "editor::GoToDiagnostic",
      "[ e": "editor::GoToPreviousDiagnostic",

      // Git
      "space g d": "git::Diff",
      "g h": "editor::GoToHunk",
      "g H": "editor::GoToPreviousHunk",
      "g s": "git::ToggleStaged",
      "g d": "editor::ToggleSelectedDiffHunks",
      "g r": "git::Restore"
    }
  },
  {
    "context": "AgentPanel",
    "use_key_equivalents": true,
    "bindings": {
      // Key-bindings for being in agent panel
      "ctrl-shift-h": "workspace::ActivatePaneLeft"
    }
  },
  {
    "context": "Terminal",
    "use_key_equivalents": true,
    "bindings": {
      // Key-bindings for being in terminal
      "ctrl-w k": "terminal_panel::ToggleFocus",
      "ctrl-shift-k": "workspace::ActivatePaneUp"
    }
  },
  {
    "context": "OutlinePanel",
    // "use_key_equivalents": true,
    "bindings": {
      // Key-bindings for being in terminal
      "ctrl-shift-l": "workspace::ActivatePaneRight"
    }
  }
]
